{% extends "layouts/base.njk" %}

{% block body %}
<section class="py-48 ~px-4/8">
  <div class="container ml-auto text-center flex flex-col justify-center items-start h-[30dvh]">
    {% if topper %}<p class="uppercase tracking-wide text-sm text-neutral-500 mb-2">{{ topper }}</p>{% endif %}
    <h1 class="text-4xl font-bold mb-10">{{ heading or title }}</h1>
    <input type="text" placeholder="{{ searchbar }}" class="w-full max-w-md px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 mb-10">

  </div>
  <div class="container m-auto px-32">
    <div class="grid gap-8 md:grid-cols-2">
        {% for cat in collections.categories %}
          {% include "components/category-card.njk" %}
        {% endfor %}
    </div>
  </div>
</section>
{% endblock %}