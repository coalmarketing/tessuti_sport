{% extends "layouts/base.njk" %}

{% block body %}
<section class="py-24 ~px-4/8">
  <div class="container m-auto">
    <h1 class="text-3xl font-bold mb-8">{{ cat.name }}</h1>
    <p class="text-xs opacity-60">items: {{ cat.items | length }}</p>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {% for p in cat.items %}
        {% include "components/product-card.njk" %}
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}