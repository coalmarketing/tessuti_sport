{% extends "layouts/base.njk" %}

{% block head %}
<style>
.checkbox:checked + .checkmark {
    background-color: #00A44F;
    border-color: #00A44F;
}
.checkbox:checked + .checkmark svg {
    opacity: 1;
}
</style>
{% endblock %}

{% block body %}
<section class="py-12 md:py-16 ~px-4/8 bg-[#E92429]/20">
  <div class="container m-auto max-w-7xl">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-600 mb-6 md:mb-8 mt-12 md:mt-16">
      <a href="/" class="hover:text-[#E92429]">Hlavní stránka</a>
      <span class="mx-2">»</span>
      <a href="/cs/katalog" class="hover:text-[#E92429]">Katalog</a>
      <span class="mx-2">»</span>
      <a href="/cs/katalog/{{ category | slug }}/" class="hover:text-[#E92429]">{{ category }}</a>
      <span class="mx-2">»</span>
      <span>{{ title }}</span>
    </nav>

    <!-- Product Detail -->
    <div class="bg-white rounded-lg border-2 border-dashed border-gray-400 p-4 md:p-6 lg:p-8">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        
        <!-- Product Image -->
        <div class="space-y-4">
          {% if image %}
            <div class="aspect-[3/3] overflow-hidden rounded-lg border-2 border-dashed border-gray-400">
              <img src="{{ image }}" alt="{{ title }}" class="w-full h-full object-cover" loading="lazy">
            </div>
          {% endif %}
          
          <!-- Additional Images Gallery -->
          {% if images and images.length > 0 %}
            <div class="grid grid-cols-4 gap-4">
              {% for img in images %}
                <div class="aspect-square overflow-hidden rounded border border-gray-300">
                  <img src="{{ img.image }}" alt="{{ title }}" class="w-full h-full object-cover cursor-pointer hover:opacity-80" loading="lazy">
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <!-- Product Info -->
        <div class="space-y-4 md:space-y-6">
          <!-- Title and Labels -->
          <div>
            <h1 class="text-2xl md:text-3xl font-bold mb-3 md:mb-4">{{ title }}</h1>
            
            <!-- Labels -->
            {% if labels and labels.length > 0 %}
              <div class="flex flex-wrap gap-2 mb-3 md:mb-4">
                {% for label in labels %}
                  {% set labelText = label.label if label.label else label %}
                  <span class="inline-block bg-[#00A44F] text-white px-2 md:px-3 py-1 rounded text-xs md:text-sm font-medium">
                    #{{ labelText }}
                  </span>
                {% endfor %}
              </div>
            {% endif %}
          </div>

          <!-- Price -->
          {% if price %}
            <div class="text-2xl md:text-3xl font-bold text-[#E92429]">
              {{ price }} {{ currency or 'CZK' }}
            </div>
          {% endif %}

          <!-- Category -->
          <div class="text-base md:text-lg text-gray-600">
            <strong>Kategorie:</strong> {{ category }}
          </div>

          <!-- Description -->
          <div class="text-gray-700">
            <h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-3">Popis produktu</h3>
            {% if excerpt %}
              <p class="text-base md:text-lg mb-3 md:mb-4">{{ excerpt }}</p>
            {% endif %}
            {% if content %}
              <div class="prose max-w-none text-sm md:text-base">
                {{ content | safe }}
              </div>
            {% endif %}
          </div>

          <!-- Parameters Table -->
          {% if parameters and parameters.length > 0 %}
            <div>
              <h3 class="text-lg md:text-xl font-semibold mb-3 md:mb-4">Parametry</h3>
              <div class="border-2 border-dashed border-gray-400 rounded-lg overflow-hidden">
                <table class="w-full">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-3 md:px-4 py-2 md:py-3 text-left text-xs md:text-sm font-semibold text-gray-900 border-b border-dashed border-gray-400">Parametr</th>
                      <th class="px-3 md:px-4 py-2 md:py-3 text-left text-xs md:text-sm font-semibold text-gray-900 border-b border-dashed border-gray-400">Hodnota</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for param in parameters %}
                      <tr class="{% if not loop.last %}border-b border-dashed border-gray-400{% endif %}">
                        <td class="px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-900">{{ param.name }}</td>
                        <td class="px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm text-gray-700">{{ param.value }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          {% endif %}

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 md:gap-4 pt-4 md:pt-6">
            <button onclick="document.getElementById('contact-form').scrollIntoView({behavior: 'smooth'})" class="flex-1 bg-[#E92429] hover:bg-[#E92429]/90 text-white px-6 md:px-8 py-2 md:py-3 rounded font-semibold transition-colors cursor-pointer text-sm md:text-base">
              Kontaktovat ohledně produktu
            </button>
            <a href="/cs/katalog/{{ category | slug }}/" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 md:px-8 py-2 md:py-3 rounded font-semibold text-center transition-colors text-sm md:text-base">
              Zpět na kategorii
            </a>
          </div>
        </div>
      </div>
      <div id="contact-form" class="mt-8 md:mt-12 p-4 md:p-6 lg:p-8">
        <h2 class="text-xl md:text-2xl lg:text-3xl font-bold mb-2 md:mb-3 text-block leading-[1.1]">Kontaktujte nás ohledně produktu</h2>
        <p class="text-base md:text-lg text-neutral-600 mb-4 md:mb-6 text-block">Máte zájem o tento produkt? Napište nám a my se vám ozveme s nabídkou.</p>
        <form name="product-contact" method="POST" data-netlify="true" class="grid md:grid-cols-2 gap-8 md:gap-12 lg:gap-24">
            <input type="hidden" name="product" value="{{ title }}">
            <input type="hidden" name="category" value="{{ category }}">
            <div class="flex flex-col gap-3 md:gap-4">
                <label for="name" class="text-lg md:text-xl lg:text-2xl font-semibold">Jméno *</label>
                <input type="text" id="name" name="name" required class="p-3 md:p-4 lg:p-5 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg">

                <label for="surname" class="text-lg md:text-xl lg:text-2xl font-semibold">Příjmení *</label>
                <input type="text" id="surname" name="surname" required class="p-3 md:p-4 lg:p-5 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg">

                <label for="company" class="text-lg md:text-xl lg:text-2xl font-semibold">Firma *</label>
                <input type="text" id="company" name="company" required class="p-3 md:p-4 lg:p-5 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg">

                <label for="email" class="text-lg md:text-xl lg:text-2xl font-semibold">Email *</label>
                <input type="email" id="email" name="email" required class="p-3 md:p-4 lg:p-5 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg">

                <label for="phone" class="text-lg md:text-xl lg:text-2xl font-semibold">Tel. Číslo</label>
                <input type="tel" id="phone" name="phone" class="p-3 md:p-4 lg:p-5 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg">

                <div class="flex items-start gap-2 mt-2 md:mt-4">
                    <label for="policy" class="flex items-start cursor-pointer">
                        <input type="checkbox" id="policy" name="policy" required class="sr-only checkbox">
                        <span class="checkmark w-8 h-6 md:w-10 md:h-8 lg:w-12 lg:h-10 border-2 border-gray-300 flex items-center justify-center mt-1 flex-shrink-0">
                            <svg class="w-3 h-3 md:w-4 md:h-4 lg:w-5 lg:h-5 text-white opacity-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </span>
                        <span class="text-sm md:text-lg lg:text-xl text-black ml-2 leading-relaxed">Tímto souhlasím se <span class="text-[#00A44F] underline">Zásadami ochrany osobních údajů</span> a <span class="text-[#00A44F] underline">Zpracováním souborů cookies</span>.</span>
                    </label>
                </div>
            </div>
            <div class="flex flex-col gap-3 md:gap-4">
                <label for="message" class="text-lg md:text-xl lg:text-2xl font-semibold">Zpráva *</label>
                <textarea id="message" name="message" rows="12" md:rows="15" lg:rows="18" required class="p-3 md:p-4 lg:p-6 border-2 border-[#E92429] rounded-lg bg-[#E92429]/20 resize-none focus:border-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 text-base md:text-lg min-h-[200px] md:min-h-[300px]" placeholder="Napište nám o vašem zájmu o produkt {{ title }}..."></textarea>
                <button type="submit" class="mt-2 md:mt-4 text-lg md:text-xl lg:text-2xl px-6 md:px-8 lg:px-12 py-3 md:py-4 lg:py-5 rounded-xl text-white bg-[#00A44F] self-center md:self-end hover:bg-green-700 transition-colors">Odeslat poptávku</button>
            </div>
        </form>
    </div>
    </div>
   
    <!-- Related Products Section -->
    <div class="mt-12 md:mt-16">
      <h2 class="text-xl md:text-2xl font-bold mb-6 md:mb-8">Podobné produkty</h2>
      {% set categoryProducts = collections.products | categoryProducts(category) %}
      {% set relatedProducts = [] %}
      {% for p in categoryProducts %}
        {% if p.data.title != title and relatedProducts.length < 3 %}
          {% set relatedProducts = relatedProducts.concat([p]) %}
        {% endif %}
      {% endfor %}
      
      {% if relatedProducts.length > 0 %}
        <div class="grid gap-4 md:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
          {% for p in relatedProducts %}
            {% include "components/product-card.njk" %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}