{% extends "layouts/base.njk" %}

{% block head %}
<style>
.checkbox:checked + .checkmark {
    background-color: #00A44F;
    border-color: #00A44F;
}
.checkbox:checked + .checkmark svg {
    opacity: 1;
}
</style>
{% endblock %}

{% block body %}
<section class="py-12 md:py-16 ~px-4/8 bg-[#E92429]/20">
  <div class="container m-auto max-w-3xl lg:px-48">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-600 mb-6 md:mb-8 mt-12 md:mt-16 font-body">
      <a href="/" class="hover:text-[#E92429]">Hlavní stránka</a>
      <span class="mx-2">»</span>
      <a href="/cs/katalog" class="hover:text-[#E92429]">Katalog</a>
      <span class="mx-2">»</span>
      <a href="/cs/katalog/{{ category | slug }}/" class="hover:text-[#E92429]">{{ category }}</a>
      <span class="mx-2">»</span>
      <span>{{ title }}</span>
    </nav>

    <!-- Product Detail -->
    <div class="bg-white rounded-lg p-4 md:p-6 lg:p-8 border-dashed-custom">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        
        <!-- Product Image -->
        <div class="space-y-4" data-gallery>
          {% if image %}
            <div class="aspect-[3/3] overflow-hidden rounded-lg border-gray-400">
              <img src="{{ image }}" 
                   alt="{{ title }}" 
                   class="w-full h-full object-cover cursor-pointer hover:opacity-90 transition-opacity" 
                   loading="lazy"
                   data-gallery-item
                   data-index="0">
            </div>
          {% endif %}
          
          <!-- Additional Images Gallery -->
          {% if images and images.length > 0 %}
            <div class="grid grid-cols-4 gap-4">
              {% for img in images %}
                {% set imgSrc = img.image if img.image else img %}
                {% if imgSrc %}
                  <div class="aspect-square overflow-hidden rounded border border-gray-300">
                    <img src="{{ imgSrc }}" 
                         alt="{{ title }}" 
                         class="w-full h-full object-cover cursor-pointer hover:opacity-80 transition-opacity" 
                         loading="lazy"
                         data-gallery-item
                         data-index="{{ loop.index }}">
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <!-- Product Info -->
        <div class="space-y-4 md:space-y-6">
          <!-- Title and Labels -->
          <div>
            <h1 class="text-2xl md:text-3xl font-bold mb-3 md:mb-4 font-heading">{{ title }}</h1>
            
            <!-- Labels -->
            {% if labels and labels.length > 0 %}
              <div class="flex flex-wrap gap-2 mb-3 md:mb-4">
                {% for label in labels %}
                  {% set labelText = label.label if label.label else label %}
                  <span class="inline-block bg-[#00A44F] text-white px-2 md:px-3 py-1 rounded text-xs md:text-sm font-medium font-body">
                    #{{ labelText }}
                  </span>
                {% endfor %}
              </div>
            {% endif %}
          </div>

          <!-- Price -->
          {% if price %}
            <div class="text-2xl md:text-3xl font-bold text-[#E92429] font-body">
              {{ price }} {{ currency or 'CZK' }}
            </div>
          {% endif %}

          <!-- Category -->
          <div class="text-base md:text-lg text-gray-600 font-body">
            <strong>Kategorie:</strong> {{ category }}
          </div>

          <!-- Description -->
          <div class="text-gray-700">
            <h3 class="text-lg md:text-xl font-semibold mb-2 md:mb-3 font-heading">Popis produktu</h3>
            {% if excerpt %}
              <p class="text-base md:text-lg mb-3 md:mb-4 font-body">{{ excerpt }}</p>
            {% endif %}
            {% if content %}
              <div class="prose max-w-none text-sm md:text-base font-body">
                {{ content | safe }}
              </div>
            {% endif %}
          </div>

          <!-- PDF Download Button -->
          {% if download_pdf %}
            <div class="pt-2 space-y-2">
              <a href="{{ download_pdf }}" 
                 download 
                 target="_blank"
                 rel="noopener noreferrer"
                 class="inline-flex items-center gap-2 bg-[#00A44F] hover:bg-[#00A44F]/90 text-white px-4 md:px-6 py-2 md:py-3 rounded-lg font-semibold transition-colors text-sm md:text-base font-body shadow-md hover:shadow-lg"
                 aria-label="Stáhnout PDF s detailními informacemi o produktu {{ title }}">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Stáhnout přílohy
              </a>
              <p class="text-xs md:text-sm text-gray-600 font-body">
                <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span class="font-medium">Soubor:</span> {{ download_pdf | replace('/assets/images/cms/', '') | replace('/assets/uploads/', '') | replace('%20', ' ') }}
              </p>
            </div>
          {% endif %}

          <!-- Parameters Table -->
          {% if parameters and parameters.length > 0 %}
            <div>
              <h3 class="text-lg md:text-xl font-semibold mb-3 md:mb-4 font-heading">Parametry</h3>
              <div class="border-2 border-gray-400 rounded-lg overflow-hidden">
                <table class="w-full">
                  <thead class="bg-gray-50">
                    <tr>
                      <th class="px-3 md:px-4 py-2 md:py-3 text-left text-xs md:text-sm font-semibold text-gray-900 border-b border-gray-400 font-body">Parametr</th>
                      <th class="px-3 md:px-4 py-2 md:py-3 text-left text-xs md:text-sm font-semibold text-gray-900 border-b border-gray-400 font-body">Hodnota</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for param in parameters %}
                      <tr class="{% if not loop.last %}border-b border-gray-400{% endif %}">
                        <td class="px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm font-medium text-gray-900 font-body">{{ param.name }}</td>
                        <td class="px-3 md:px-4 py-2 md:py-3 text-xs md:text-sm text-gray-700 font-body">{{ param.value }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          {% endif %}

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 md:gap-4 pt-4 md:pt-6">
            <button onclick="document.getElementById('contact-form').scrollIntoView({behavior: 'smooth'})" class="flex-1 bg-[#E92429] hover:bg-[#E92429]/90 text-white px-6 md:px-8 py-2 md:py-3 rounded font-semibold transition-colors cursor-pointer text-sm md:text-base font-body">
              Kontaktovat ohledně produktu
            </button>
            <a href="/cs/katalog/{{ category | slug }}/" class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 md:px-8 py-2 md:py-3 rounded font-semibold text-center transition-colors text-sm md:text-base font-body">
              Zpět na kategorii
            </a>
          </div>
        </div>
      </div>
      <div id="contact-form" class="mt-8 md:mt-12 p-4 md:p-6 lg:p-8">
        <h2 class="text-xl md:text-2xl lg:text-3xl font-bold mb-2 md:mb-3 text-block leading-[1.1] font-heading">Kontaktujte nás ohledně produktu</h2>
        <p class="text-base md:text-lg text-neutral-600 mb-4 md:mb-6 text-block font-body">Máte zájem o tento produkt? Napište nám a my se vám ozveme s nabídkou.</p>
        <form name="product-contact" method="POST" action="/kontakt/success/" data-netlify="true" data-netlify-honeypot="bot-field" class="grid md:grid-cols-2 gap-8 md:gap-12 lg:gap-24">
            <!-- Hidden fields for Netlify form processing -->
            <input type="hidden" name="form-name" value="product-contact" />
            <p class="sr-only">
                <label for="bot-field">Don't fill this out if you're human:</label>
                <input name="bot-field" id="bot-field" />
            </p>
            
            <!-- Product context fields -->
            <input type="hidden" name="product" value="{{ title }}">
            <input type="hidden" name="category" value="{{ category }}">
            
            <div class="flex flex-col gap-3 md:gap-4">
                <label for="name" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Jméno *</label>
                <input type="text" id="name" name="name" required class="p-3 md:p-4 lg:p-5 border-2 border-gray-700 rounded-lg bg-gray-100 text-base md:text-lg font-body">

                <label for="surname" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Příjmení *</label>
                <input type="text" id="surname" name="surname" required class="p-3 md:p-4 lg:p-5 border-2 border-gray-700 rounded-lg bg-gray-100 text-base md:text-lg font-body">

                <label for="company" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Firma *</label>
                <input type="text" id="company" name="company" required class="p-3 md:p-4 lg:p-5 border-2 border-gray-700 rounded-lg bg-gray-100 text-base md:text-lg font-body">

                <label for="email" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Email *</label>
                <input type="email" id="email" name="email" required class="p-3 md:p-4 lg:p-5 border-2 border-gray-700 rounded-lg bg-gray-100 text-base md:text-lg font-body">

                <label for="phone" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Tel. Číslo</label>
                <input type="tel" id="phone" name="phone" class="p-3 md:p-4 lg:p-5 border-2 border-gray-700 rounded-lg bg-gray-100 text-base md:text-lg font-body">

                <div class="flex items-start gap-2 mt-2 md:mt-4">
                    <label for="policy" class="flex items-start cursor-pointer">
                        <input type="checkbox" id="policy" name="policy" required class="sr-only checkbox">
                        <span class="checkmark w-10 h-8 md:w-12 lg:w-14 md:h-10 lg:h-12 border-2 border-gray-300 flex items-center justify-center mt-1 flex-shrink-0">
                            <svg class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6 text-white opacity-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </span>
                        <span class="text-sm md:text-lg lg:text-xl text-black ml-2 leading-relaxed font-body">Tímto souhlasím se <a href="/gdpr/" class="text-[#00A44F] underline hover:text-green-700 transition-colors duration-300">Zásadami ochrany osobních údajů</a> a <span class="text-[#00A44F] underline">Zpracováním souborů cookies</span>.</span>
                    </label>
                </div>
            </div>
            <div class="flex flex-col gap-3 md:gap-4">
                <label for="message" class="text-lg md:text-xl lg:text-2xl font-semibold font-body">Zpráva *</label>
                <textarea id="message" name="message" rows="15" md:rows="18" lg:rows="22" required class="p-4 md:p-5 lg:p-7 border-2 border-gray-700 rounded-lg bg-gray-100 resize-none text-base md:text-lg min-h-[200px] md:min-h-[300px] font-body" placeholder="Napište nám o vašem zájmu o produkt {{ title }}..."></textarea>
                <button type="submit" class="mt-2 md:mt-4 text-lg md:text-2xl lg:text-4xl px-8 md:px-12 lg:px-16 py-3 md:py-4 lg:py-6 rounded-xl text-white bg-[#00A44F] self-center md:self-end font-body">Odeslat zprávu</button>
            </div>
        </form>
    </div>
    </div>
   
    <!-- Related Products Section -->
    <div class="mt-12 md:mt-16">
      <h2 class="text-xl md:text-2xl font-bold mb-6 md:mb-8 font-heading">Podobné produkty</h2>
      {% set categoryProducts = collections.products | categoryProducts(category) %}
      {% set relatedProducts = [] %}
      {% for p in categoryProducts %}
        {% if p.data.title != title and relatedProducts.length < 3 %}
          {% set relatedProducts = relatedProducts.concat([p]) %}
        {% endif %}
      {% endfor %}
      
      {% if relatedProducts.length > 0 %}
        <div class="grid gap-4 md:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
          {% for p in relatedProducts %}
            {% include "components/product-card.njk" %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<script src="/assets/js/gallery-lightbox.js"></script>
{% endblock %}