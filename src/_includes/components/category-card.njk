<div class="border-2 border-dashed-custom border-gray-400 rounded-lg p-6 bg-white hover:shadow-lg transition-shadow group">
  {% if cat.image %}
    <div class="mb-4 overflow-hidden rounded aspect-[16/10]">
      <img src="{{ cat.image }}" alt="{{ cat.name }}" class="w-full h-full object-cover">
    </div>
  {% endif %}
  
  <div class="space-y-3">
    <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 font-heading">{{ cat.name }}</h3>
    {% if cat.description %}
      <p class="text-gray-600 text-lg leading-relaxed font-body">{{ cat.description }}</p>
    {% endif %}
    
    <div class="pt-2">
      {% if cat.name == "Individuální poptávka" %}
        <a href="#contact-form" class="inline-block bg-green-600 text-white px-4 py-2 rounded text-xl hover:bg-green-700 transition-colors font-body">
          Kontaktní formulář
        </a>
      {% else %}
        <a href="/cs/katalog/{{ cat.slug }}/" class="inline-block bg-[#E92429] text-white px-4 py-2 rounded text-xl hover:bg-[#d41e24] transition-colors font-body">
          Otevřít kategorii
        </a>
      {% endif %}
    </div>
  </div>
</div>