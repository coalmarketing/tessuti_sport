<div class="border-2 border-dashed border-gray-400 rounded-lg p-6 bg-white hover:shadow-md transition-shadow">
  {% if p.data.image %}
    <div class="aspect-[3/3] w-full bg-gray-100 rounded mb-4 overflow-hidden">
      <img src="{{ p.data.image }}" alt="{{ p.data.title }}" class="w-full h-full object-cover" loading="lazy">
    </div>
  {% else %}
    <div class="aspect-[4/3] w-full bg-gray-100 rounded mb-4 flex items-center justify-center">
      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
        <circle cx="8.5" cy="8.5" r="1.5"></circle>
        <polyline points="21,15 16,10 5,21"></polyline>
      </svg>
    </div>
  {% endif %}
  
  <h3 class="text-xl font-bold mb-2">{{ p.data.title }} 
    {% if p.data.isNew %}<span class="inline-block w-3 h-3 bg-red-500 rounded-full ml-2"></span>{% endif %}
  </h3>
  
  {% if p.data.excerpt %}
    <p class="text-sm text-gray-700 mb-3 line-clamp-3">{{ p.data.excerpt }}</p>
  {% endif %}
  
  {% if p.data.weight or p.data.composition %}
    <div class="text-sm text-gray-600 mb-3">
      {% if p.data.weight %}<div>{{ p.data.weight }}</div>{% endif %}
      {% if p.data.composition %}<div>{{ p.data.composition }}</div>{% endif %}
    </div>
  {% endif %}

  {% if p.data.colors %}
    <div class="flex items-center gap-1 mb-3">
      {% for color in p.data.colors %}
        <div class="w-6 h-6 rounded border border-gray-300" style="background-color: {{ color }};"></div>
      {% endfor %}
    </div>
  {% endif %}

  {% if p.data.labels %}
    <div class="flex flex-wrap gap-2 mb-4">
      {% for label in p.data.labels %}
        {% if label.label %}
          <span class="text-xs bg-[#00A44F] text-white px-2 py-1 rounded-full font-medium">#{{ label.label }}</span>
        {% else %}
          <span class="text-xs bg-[#00A44F] text-white px-2 py-1 rounded-full font-medium">#{{ label }}</span>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}

  <a href="{{ p.url }}" class="inline-block bg-[#E92429] text-white px-4 py-2 rounded text-sm font-semibold hover:bg-[#d41e24] transition-colors">
    Zobrazit produkt
  </a>
</div>